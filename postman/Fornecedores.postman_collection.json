{
  "info": {
    "name": "Ronalds WS - Fornecedores",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    { "key": "baseUrl", "value": "http://localhost:8080" },
    { "key": "id", "value": "123" },
    { "key": "q", "value": "" },
    { "key": "page", "value": "0" },
    { "key": "size", "value": "20" },
    { "key": "sort", "value": "razaoSocial,asc" }
  ],
  "item": [
    {
      "name": "Listar Fornecedores (paginado + busca/sort)",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/fornecedores?q={{q}}&page={{page}}&size={{size}}&sort={{sort}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "fornecedores"],
          "query": [
            { "key": "q", "value": "{{q}}" },
            { "key": "page", "value": "{{page}}" },
            { "key": "size", "value": "{{size}}" },
            { "key": "sort", "value": "{{sort}}" }
          ]
        }
      }
    },
    {
      "name": "Buscar Fornecedor por ID",
      "request": {
        "method": "GET",
        "url": {
          "raw": "{{baseUrl}}/api/fornecedores/{{id}}",
          "host": ["{{baseUrl}}"],
          "path": ["api", "fornecedores", "{{id}}" ]
        }
      }
    },
